    <text>></text>
  </view>
  <view class='my-money same '>
    <text>我的押金</text>
    <text>></text>
  </view>
  <view class='about same'>
    <text>关于ofo</text>
    <text>></text>
  </view>
  <button class='btn-charge' bindtap='goMap'>返回地图</button>
